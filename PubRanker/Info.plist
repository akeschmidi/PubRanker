<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bundle Information -->
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	<key>CFBundleDisplayName</key>
	<string>PubRanker</string>

	<!-- macOS Principal Class -->
	<key>NSPrincipalClass</key>
	<string>NSApplication</string>

	<!-- High Resolution Capable -->
	<key>NSHighResolutionCapable</key>
	<true/>

	<!-- iOS Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>

	<!-- macOS Background Capabilities -->
	<key>LSBackgroundOnly</key>
	<false/>

	<!-- Enable CloudKit remote notifications -->
	<key>NSUserNotificationAlertStyle</key>
	<string>alert</string>

	<!-- Application Scene Manifest (iOS) -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<true/>
	</dict>

	<!-- Supported Interface Orientations (iOS) -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
	</array>

	<!-- iPad Specific -->
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- Launch Screen -->
	<key>UILaunchScreen</key>
	<dict/>

	<!-- Full Screen -->
	<key>UIRequiresFullScreen</key>
	<false/>

	<!-- Application Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.productivity</string>

	<!-- Copyright -->
	<key>NSHumanReadableCopyright</key>
	<string>Copyright Â© 2025 akeschmidi</string>

	<!-- Encryption -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>

	<!-- Minimum System Version -->
	<key>LSMinimumSystemVersion</key>
	<string>$(MACOSX_DEPLOYMENT_TARGET)</string>
</dict>
</plist>
